#pragma once

#include <math.h>
#include "MathTools.h"

#include "Calibreur_GPU.h"
#include "ColorTools_GPU.h"
using namespace gpu;

class JuliaMath : public FractaleMath
    {

    public:
	__device__
	JuliaMath(uint n) : FractaleMath(n)
	{
	}


    	__device__
    	 ~JuliaMath() {}

    protected:
	__device__
    	int calculIndice(float x, float y)
    	    {

    	    float c1 = -0.745 ;
    	    float c2 = 0.1;
    	    float a = x;
    	    float b = y;
    	    int i = 0;

    	    for (i = 0; i <= n; i++)
    		{
    		float aCopy = a;
    		a = ((a * a) - (b * b)) + c1;
    		b = 2 * aCopy * b + c2;

    		if (isDivergent(a, b))
    		    {
    		    return i;
    		    }
    		}
    	    return i;

    	    }

    };
